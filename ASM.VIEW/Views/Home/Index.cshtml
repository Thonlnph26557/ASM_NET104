@model IEnumerable<ASM.DB.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
    Layout = "_ASMLayoutCarousel";
}
<div style="border: 2px solid rgba(240, 240, 240, 0.9); border-radius: 5px;" class="m-3 p-3">
    <h4>Các sản phẩm</h4>
    <hr />
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-3">
                <div style="border: 2px solid rgba(240, 240, 240, 0.9); border-radius: 5px;" class="p-2">
                    <div class="mt-3">
                        <img src="@item.ImageUrl" class="w-75 mx-auto d-block" />
                        <div class="text-center mt-3">
                            <h5>@item.Name</h5>
                            <p>Giá: <span style="color:red; text-decoration: underline;">@(item.Price + "đ")</span></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


