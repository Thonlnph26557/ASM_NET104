@model ASM.DB.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "_ASMLayoutCarousel";
}

<div style="border: 2px solid rgba(240, 240, 240, 0.9); border-radius: 5px;" class="m-3 p-3">
    <h4>Thêm sản phẩm</h4>
    <hr />
    <form>
        <div class="row">
            <div class="form-group">
                <label>Tên</label>
                <input type="text" class="form-control" asp-for="Name"/>
            </div>
            <div class="form-group mt-1">
                <label>Giá</label>
                <input type="number" class="form-control" asp-for="Price"/>
                <small class="form-text text-danger">@Html.ValidationMessageFor(x => x.Price)</small>
            </div>
            <div class="form-group mt-1">
                <label>Số lượng tồn</label>
                <input type="number" step="5" class="form-control" asp-for="AvaiableQuantity"/>
            </div>
            <div class="form-group">
                <label>Đường dẫn ảnh</label>
                <input type="text" class="form-control" asp-for="ImageUrl" />
            </div>
            <div class="form-group mt-1">
                <label>Trạng thái</label>
                <select class="form-control" asp-for="Status">
                    <option value="1">Hoạt động</option>
                    <option value="0">Không hoạt động</option>
                </select>
            </div>
            <div class="form-group mt-1">
                <label>Đối tượng cung cấp</label>
                <input type="text" class="form-control" asp-for="Supplier"/>
            </div>
            <div class="form-group mt-1">
                <label>Mô tả</label>
                <textarea rows="2" class="form-control" asp-for="Description"></textarea>
            </div>
        </div>
        <div class="mt-3">
            <button class="btn btn-primary float-end" type="submit">Lưu</button>
            <button class="btn btn-outline-primary float-end me-3" onclick="location.href='@Url.Action("List", "Product")'">Hủy</button>
        </div>
        <div style="clear:both;"></div>
    </form>
</div>